<?xml version = "1.0" encoding = "UTF-8"?>
<configuration>
    <appender name = "STDOUT" class = "ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{dd-MM-yyyy HH:mm:ss.SSS} %-4r [%t] trace-id=[%X{track-id}] - %L: %-5level %logger{36}.%M - %msg%n
            </pattern>
        </encoder>
    </appender>

    <root level = "INFO">
        <appender-ref ref = "STDOUT"/>
    </root>
</configuration>